body {
	text-align: center;
	font-family: 'Lato', sans-serif;
	background-color: #ecf0f3;
}

input {
	font-size: 20px;
	border-width: 0px;
	background-color: #bfbfbf;
	margin: 8px;
	padding: 4px;
	box-sizing: border-box;
}

.menu {
	border-radius: 15px;
	position: relative;
	background-color: #ecf0f3;
	max-width: 320px;
	margin: 0 auto;
	padding: 20px;
	box-shadow: 10px 10px 20px #cbced1, -10px -10px 20px #fff;
}

.Paragraphes {
	border-radius: 15px;
	position: relative;
	background-color: #ecf0f3;
	width: 80%;
	margin: 0 auto;
	padding: 20px;
	box-shadow: 10px 10px 20px #cbced1, -10px -10px 20px #fff;
}

ul {
	
  position: sticky;
  top: 0;
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #0099ff;
  border-radius: 15px;
}

li {
	
  float: left;
}

li a {
	transition: all 0.5s;
  display: block;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

li a:hover:not(.active) {
  color : black;
  background-color: white;
  /* #0a0f29 */
}

.active {
  background-color: #0066ff;
}

#button {
	border-radius: 15px;
	text-align: center;
	font-size: 20px;
	color: White;
	background-color: #0099ff;
	outline: 0;
	margin: 8px;
	width: 150px;
	border: 0;
	padding: 10px;
	cursor: pointer;
	transition: font-size 0.5s;
