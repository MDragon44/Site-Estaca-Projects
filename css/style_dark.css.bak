body {
	text-align: center;
	font-family: 'Lato', sans-serif;
	background-color: #0e1538
	/* #0e1538 */
}

input {
	font-size: 20px;
	border-width: 0px;
	background-color: #bfbfbf;
	margin: 8px;
	padding: 4px;
	box-sizing: border-box;
}


.menu {
	border-radius: 15px;
	position: relative;
	background-color: #0e1538;
	max-width: 280px;
	margin: 0 auto;
	padding: 20px;
	box-shadow: 10px 10px 20px #0a0f29, -10px -10px 20px #141f52;
	
}

.Paragraphes {
	border-radius: 15px;
	position: relative;
	background-color: #0e1538;
	width: 80%;
	margin: 0 auto;
	padding: 20px;
	box-shadow: 10px 10px 20px #0a0f29, -10px -10px 20px #141f52;
	
}

ul {
	
  position: sticky;
  top: 0;
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #0a0f29;
}

li {
	
  float: left;
}

li a {
	transition: all 0.5s;
  display: block;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

li a:hover:not(.active) {
  background-color: #0066ff;
}

.active {
  background-color: #0066ff;
}



#button {
	border-radius: 15px;
	text-align: center;
	font-size: 20px;
	color: White;
	background-color: #142952;
	outline: 0;
	margin: 8px;
	width: 150px;
	border: 0;
	padding: 10px;
	cursor: pointer;
	transition: all 0.5s;
}

#button:hover {
	
	border-radius: 15px;
	text-align: center;
	font-size: 22px;
	width: 150px;
	color: White;
	background-color: black;
	outline: 0;
	margin: 8px;
	border: 0;
	padding: 10px;
	cursor: pointer;
	box-shadow: 2px 2px 5px #000000, -2px -2px 5px #0d0d0d;
}

no {
	font-size: 18px;
	margin: 5px;
}

#title {
	color: #bfbfbf;
}

.title {
	height: 30px;
	width: 30%;
	position: relative;
